{
  "name": "memory-mcp-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker MCP server for cross-device memory/knowledge graph",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create memory-graph",
    "db:migrate": "wrangler d1 execute memory-graph --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute memory-graph --local --file=./schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.99.0"
  },
  "dependencies": {
    "hono": "^4.6.0"
  }
}
